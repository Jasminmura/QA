					"script": {
						"exec": [
							"let response = pm.response.json();\r",
							"\r",
							"if (response.token) {\r",
							"    pm.environment.set(\"Token\", response.token);\r",
							"    console.log(\"✅ Token saved:\", response.token);\r",
							"    pm.test(\"Token was saved to environment\", function () {\r",
							"        pm.expect(response.token).to.be.a('string');\r",
							"    });\r",
							"} else {\r",
							"    console.error(\"❌ Token not found in response!\");\r",
							"    pm.test(\"Token is missing\", function () {\r",
							"        pm.expect.fail(\"No token found in response\");\r",

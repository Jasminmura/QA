		{
			"name": "booking is not appears at  list",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let deletedID = parseInt(pm.environment.get(\"ID\"));  // Get the ID we deleted\r",
							"let allBookings = pm.response.json();                // Parse the response\r",
							"\r",
							"let idExists = allBookings.some(b => b.bookingid === deletedID);\r",
							"\r",
							"if (!idExists) {\r",
							"    console.log(`✅ Booking ID ${deletedID} was successfully deleted.`);\r",
							"    pm.test(`Booking ID ${deletedID} is not in the list`, function () {\r",
							"        pm.expect(idExists).to.be.false;\r",
							"    });\r",
							"} else {\r",
							"    console.error(`❌ Booking ID ${deletedID} is still present!`);\r",
							"    pm.test(`Booking ID ${deletedID} should not be in the list`, function () {\r",
							"        pm.expect(idExists).to.be.false;\r",
							"    });\r",
							"}\r",
							""
						],
